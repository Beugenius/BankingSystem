<!DOCTYPE html>
<html>
	<head>
		<%- include('../../views/partial/meta'); %>
		<title>Accounts</title>
		<%- include('../../views/partial/stylesheets'); %>
	</head>
	<body>
		<header><%- include('../../views/partial/nav'); %></header>
		<div class="container-fluid vh-100" style="margin-top: 10px">
			<div class="">
				<div class="rounded d-flex justify-content-center">
					<div class="col-md-8 col-sm-12 shadow-lg p-5 bg-light">
						<div class="text-center">
							<h2 class="text-primary">Accounts</h2>
						</div>
						<div class="text-center">
							<h4 class="text-primary">Total Available Balance: $<%- locals.totalBalance %></h4>
						</div>
						<div class="account-cards">
							<% locals.userAccounts.forEach(element => { %>
							<div class="card col-md-5 p-0">
								<% if(element.account_type_id == 1) { %>
								<div class="card-header">Checking</div>
								<% } else { %>
								<div class="card-header">Savings</div>
								<% } %>
								<div class="card-body">
									<h5 class="card-title">$<%- element.balance%></h5>
									<p class="card-text"><%- element.user_id %> | <%- element.account_number %></p>
								</div>
							</div>
							<% }) %>
						</div>
						<div class="d-flex justify-content-end my-3">
							<a class="text-decoration-none text-reset mx-3" href="/employee/deposit"
								>Make a Deposit</a
							>
							<p>|</p>
							<a class="text-decoration-none text-reset mx-3" href="/employee/transfer">
								Make a Transfer
							</a>
							<p>|</p>
							<a class="text-decoration-none text-reset mx-3" href="/employee/transactionhistory">
								View History
							</a>
							<p>|</p>
							<a class="text-decoration-none text-reset mx-3" href="/employee/accounts"> Back </a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
