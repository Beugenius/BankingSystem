<!DOCTYPE html>
<html>
  <head>
    <%- include('../views/partial/meta'); %>
    <title>Accounts</title>
    <%- include('../views/partial/stylesheets'); %>
  </head>
  <body>
    <header><%- include('../views/partial/nav'); %></header>
    <div class="container-fluid vh-100" style="margin-top: 10px">
      <div class="">
        <div class="rounded d-flex justify-content-center">
          <div class="col-md-8 col-sm-12 shadow-lg p-5 bg-light">
            <div class="text-center">
              <h2 class="text-primary">Accounts</h2>
            </div>
            <div class="text-center">
                <h4 class="text-primary">Total Available Balance: $20,000.00</h4>
              </div>
            <div class="row justify-content-center mt-3">
              <div class="card col-md-5 p-0">
                <div class="card-header">Checking</div>
                <div class="card-body">
                  <h5 class="card-title">$9,999.99</h5>
                  <p class="card-text">123-456 | 123456789</p>
                </div>
                <div class="card-footer">
                  <a class="text-decoration-none text-reset" href="/transfer">
                    Make a Transfer
                  </a>
                  |
                  <a class="text-decoration-none text-reset" href="/transactionhistory">
                    View History
                  </a>
                </div>
              </div>
              <div class="col-md-1">

              </div>
              <div class="card col-md-5 p-0">
                <div class="card-header">Savings</div>
                <div class="card-body">
                  <h5 class="card-title">$10,000.01</h5>
                  <p class="card-text">987-654 | 987654321</p>
                </div>
                <div class="card-footer">
                  <a class="text-decoration-none text-reset" href="/transfer">
                    Make a Transfer
                  </a>
                  |
                  <a class="text-decoration-none text-reset" href="/transactionhistory">
                    View History
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
